<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <script src="https://kit.fontawesome.com/884949a669.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>



  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">

      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                         aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">

            <ul class="d-flex justify-content-between w-100 align-items-center list-unstyled mb-0">
              <li class ="nav-item">
                <%= link_to "Bookers", root_path, class: "nav-link text-light" %>
              </li>
    

            <div class = "d-flex gap-2">
              <% if user_signed_in? %>
                <li class ="nav-item">
                  <%= link_to user_path(current_user.id) , class: "nav-link text-light" do %>
                  <i class="fa-solid fa-house"></i> Home
                  <% end %>
                </li>
                <li class ="nav-item">
                  <%= link_to users_path , class: "nav-link text-light" do %>
                  <i class="fa-solid fa-users"></i> Users
                  <% end %>
                </li>
                <li class ="nav-item">
                  <%= link_to books_path , class: "nav-link text-light" do %>
                  <i class="fa-solid fa-book-open"></i> Books
                  <% end %>
                </li>
                <li class ="nav-item">
                  <%= link_to destroy_user_session_path, method: :delete , class: "nav-link text-light" do %>
                  <i class="fa-solid fa-right-from-bracket"></i> Log out
                  <% end %>
                </li>
              <% else %>
                <li class ="nav-item">
                  <%= link_to root_path , class: "nav-link text-light" do %>
                  <i class="fa-solid fa-house"></i> Home
                  <% end %>
                </li>
                <li class ="nav-item">
                  <%= link_to homes_about_path , class: "nav-link text-light" do %>
                  <i class="fa-solid fa-link"></i> About
                  <% end %>
                </li>
                <li class ="nav-item">
                  <%= link_to new_user_registration_path , class: "nav-link text-light" do %>
                  <i class="fa-solid fa-user-plus"></i> Sign up
                  <% end %>
                </li>
                <li class ="nav-item">
                  <%= link_to new_user_session_path , class: "nav-link text-light" do %>
                  <i class="fa-solid fa-right-to-bracket"></i> Log in
                  <% end %>
                </li>
              <% end %>
            </div>
          </ul>

          </div>
        </div>
      </nav>
    </header>

    <main>
        <% flash.each do |message_type, message| %>
          <div class="flash-message <%= message_type %>"><%= message %></div>
        <% end %>
        <%= yield %>
    </main>

    <footer class = "bg-white text-center py-3">
      <p>CopyRight Infratop.inc</p>
    </footer>
  </body>
</html>
