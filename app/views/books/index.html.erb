  <h4>name</h4>
  <h4><% @book_user.name %></h4><br>
  <h4>introduction</h4>
  <h4><% @book_user.introduction %></h4>



# ↓新規投稿
<h2>New book</h2>

<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Option</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>



# ↓一覧
<h2>Books</h2>

  <table>
    <thead>
      <tr>
        <th> </th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>


    <% @books.each do |book| %>
    <tbody>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "<%= book.title %>", book_path(book.id)%></td>
      </tr>
    </tbody>
    <% end %>
  </table>