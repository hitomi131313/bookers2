<div class = "container">
  <div class = "row" >

  
<!-- ↓ユーザー情報,新規投稿 -->
<div class = "col-md-3">
<%= render 'list', user: @user, book: @book %>
</div>


<!-- ↓一覧 -->
<div class = "col-md-8 offset-md-1">
<h2>Books detail</h2>
  <table class = "table table-hover">
    <thead>
      <tr>
        <th> </th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>

    <tbody>
    <td>
      <tr>
      <td>
        <%= image_tag @books.user.get_profile_image(100,100) %><br>
        <%= link_to user_path(@user.id) do %>
          <%= @books.user.name %>
        <% end %>
      </td>
        <td>
          <%= link_to book_path(@books.id) do %>
            <%= @books.title %>
          <% end %>
        </td>
        <td><%= @books.body %></td>
        <td>
          <% if @books.user == current_user %>
            <%= link_to "Edit", edit_book_path , class: "btn btn-success" %>
          <% end %>
        </td>
        <td>
          <% if @books.user == current_user %>
            <%= link_to "Destroy", book_path, method: :delete, "data-confirm"=>"本当に消しますか？" , class: "btn btn-danger" %>
          <% end %>
        </td>

      </tr>
    </tbody>
  </table>
  </div>
  </div>
  </div>