<h2>Book detail</h2>

<!-- ↓ユーザー情報,新規投稿 -->
<%= render 'list', user: @user, book: @book %>


<!-- ↓一覧 -->
<h2>Books</h2>

  <table>
    <thead>
      <tr>
        <th> </th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>

    <tbody>
    <td>
      <tr>
      <td>
        <%= image_tag @books.user.get_profile_image(100,100) %><br>
        <%= link_to user_path(@user.id) do %>
          <%= @books.user.name %>
        <% end %>
      </td>
        <td>
          <%= link_to book_path(@books.id) do %>
            <%= @books.title %>
          <% end %>
        </td>
        <td><%= @books.body %></td>
        <td>
          <% if @books.user == current_user %>
            <%= link_to "Edit", edit_book_path %>
          <% end %>
        </td>
        <td>
          <% if @books.user == current_user %>
            <%= link_to "Destroy", book_path, method: :delete, "data-confirm"=>"本当に消しますか？" %>
          <% end %>
        </td>

      </tr>
    </tbody>
  </table>