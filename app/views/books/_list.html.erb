<!-- ↓ユーザー情報 -->
<h2>User info</h2>
  <%= image_tag user.get_profile_image(100,100) %>
  <h4>name</h4>
  <h4><%= user.name %></h4><br>
  <h4>introduction</h4>
  <h4><%= user.introduction %></h4>

  <%= link_to edit_user_path(user) do %>
    <i class="fa-solid fa-user-gear"></i>
  <% end %>




<!-- ↓新規投稿 -->
<h2>New book</h2>

<%= form_with model: book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>
