
<!-- ↓ユーザー情報,新規投稿 -->
<%= render 'list', user: @user, book: @book %>


<!-- ↓一覧 -->
<h2>Books</h2>

  <table>
    <thead>
      <tr>
        <th> </th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>

    <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <%= image_tag @user.get_profile_image(100,100) %><br>
          <%= link_to user_path(@user.id) do %>
            <%= @user.name %>
          <% end %>
        </td>
        <td>
          <%= link_to book_path(book.id) do %>
            <%= book.title %>
          <% end %>
        </td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
