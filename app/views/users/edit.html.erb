<div class = "display: flex; jutify-content: center; mt-3">
  <div class = "mx-auto" style ="width: fit-content;">

<!-- エラーメッセージ -->
<% if @user.errors.any? %>
  <%= @user.errors.count %>error prohibited this user from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<div class = "d-flex flex-column">
  <div>
    <h2>User info</h2>
  </div>

  <div>
    <%= form_with model: @user do |f| %>
      <label for="inputName">Name</label><br>
      <%= f.text_field :name, autofocus: true, id:"inputName" , class: "form-control w-100" %><br>
      <label for="inputImage">Image</label><br>
      <%= f.file_field :profile_image, accept: "image/*" %><br>
     <label class = "mt-3">Introduction</label><br>
      <%= f.text_field :introduction, class: "form-control w-100 mb-2"%><br>
      <%= f.submit "Update User" , class: "btn btn-success" %>
    <% end %>
  </div>
