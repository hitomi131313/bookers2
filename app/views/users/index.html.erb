<div class = "container">
  <div class = "row mt-3" >

<!-- ↓ユーザー情報,新規投稿 -->
<div class = "col-md-3">
<%= render 'list', user: @user, book: @book %>
</div>


<!-- ↓一覧 -->
<div class = "col-md-8 offset-md-1">
<h2>Users</h2>
  <table class = "table table-hover">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th> </th>
      </tr>
    </thead>

    <tbody>
    <% @users.each do |users| %>
      <tr>
        <td><%= image_tag users.get_profile_image(100,100) %></td>
        <td><%= users.name %></td>
        <td><%= link_to "Show", user_path(users.id) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  </div>
  </div>
  </div>
